{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "baseUrl": ".",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "lib": ["es5", "es6", "esnext", "dom"],
    "alwaysStrict": true,
    "declaration": true,
    "removeComments": true,
    "diagnostics": true,
    // "incremental": true,
    // "experimentalDecorators": true,
    // "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "skipLibCheck": false,
    "rootDir": "./libs",
    "outDir": "./dist",
    "types": ["node"],
    "typeRoots": ["types"],
    "paths": {
      "@/*": ["./libs/*"],
      "#/*": ["./types/*"]
    }
  },
  "include": ["types/**/*.ts", "tests/**/*.ts", "libs/**/*.ts", "libs/**/*.tsx", "libs/**/*.vue"],
  "exclude": ["node_modules", "tests", "docs", "dist", ".history"]
}
