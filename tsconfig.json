{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": ".",
    "strict": true,
    "jsx": "Preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // "moduleResolution": "node",
    // "resolveJsonModule": true,
    "lib": ["es5", "es6", "esnext", "dom"],
    "alwaysStrict": true,
    "declaration": true,
    "removeComments": true,
    "diagnostics": true,
    "incremental": true,
    // "experimentalDecorators": true,
    // "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "skipLibCheck": false,
    "rootDir": "libs",
    "outDir": "dist",
    "types": ["@types/jest"],
    "typeRoots": ["types"],
    "paths": {
      "@/*": ["./libs/*"],
      "#/*": ["./types/*"]
    }
  },
  "include": ["types/*.ts", "libs/*.ts", "libs/*.tsx", "libs/*.vue"],
  "exclude": ["node_modules", "tests", "docs", "dist", ".history"]
}
