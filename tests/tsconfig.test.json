{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "pretty": true,
    "outDir": "dist",
    "types": ["node"],
    "typeRoots": ["types", "node_modules/@types"]
  },
  "exclude": ["node_modules", "tests", "docs", "dist", ".history"],
  "ts-node": {
    "module": "commonjs",
    "esm": true,
    "transpileOnly": true,
    "files": true
  }
}